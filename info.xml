<?xml version="1.0"?>
<extension key="com.joineryhq.arstweaks" type="module">
  <file>arstweaks</file>
  <name>ARS Tweaks (CiviCRM)</name>
  <description>Specialized behaviors for ARS</description>
  <license>GPL-3.0</license>
  <authors>
    <author>
      <name>Allen Shaw</name>
      <email>allen@JoineryHQ.com</email>
      <role>Maintainer</role>
    </author>
  </authors>
  <urls>
    <url desc="Main Extension Page">https://github.com/JoineryHQ/com.joineryhq.arstweaks</url>
    <url desc="Documentation">https://github.com/JoineryHQ/com.joineryhq.arstweaks/blob/master/README.md</url>
    <url desc="Support">https://github.com/JoineryHQ/com.joineryhq.arstweaks/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/gpl-3.0.html</url>
  </urls>
  <releaseDate>2025-11-10</releaseDate>
  <version>1.0.0</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>6.4</ver>
  </compatibility>
  <comments>Developed by Allen Shaw, Joinery</comments>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Arstweaks</namespace>
    <format>25.01.1</format>
    <angularModule>crmArstweaks</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty@1.0.3</mixin>
  </mixins>
</extension>
